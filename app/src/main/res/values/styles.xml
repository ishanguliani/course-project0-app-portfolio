<resources>

    <color name="bg_grey">#d3d3d3</color>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="btnStandard" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:typeface">serif</item>
        <item name="android:layout_margin">@dimen/button_margin_standard</item>
        <item name="android:borderlessButtonStyle">?android:attr/borderlessButtonStyle</item>
        <item name="android:drawableLeft">@drawable/ic_launcher</item>
    </style>

    <style name="btnStandard.blueBackground">
        <item name="android:background">#b0b0ff</item>
    </style>

    <style name="btnStandard.redBackground">
        <item name="android:background">#ff0000</item>
    </style>

    <style name="btnStandard.orangeBackground">
        <item name="android:background">#FFd700</item>
    </style>

    <style name="btnStandard.moreMargin">
        <item name="android:layout_margin">@dimen/button_margin_more</item>
        <item name="android:background">#ff0000</item>
    </style>




</resources>
